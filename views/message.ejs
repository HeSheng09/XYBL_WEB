<script>
    function createVue(Allmsg,msg)
    {
        const app = new Vue({
            el: '#app',
            data: {
                msg:Allmsg,
                n:0,
            },
            methods:{
                test()
                    {
                        this.n++;
                        let m=(this.n/2)%2;
                    // console.log("beianle!");
                    // console.log(m);
                    if(m===1)
                    {
                        this.msg=msg;
                        // console.log("未读")
                    }
                    if(m===0)
                    {
                        this.msg=Allmsg;
                    }
                    },
                read(i)
                {// console.log(i.msg);
                    let iid=i.msg.substring(i.msg.indexOf("=")+1,i.msg.indexOf(")"));
                    // console.log(iid);
                    let urlread=" http://47.98.164.4:8080/server/msg/change_flag";
                    $.ajax({
                        type: 'get', /*  请求方式  GET  、 POST 、 PUT 等.. */
                        url: urlread, /*  后台的接口(findApi)  使用相对路径即可 */
                        dateType: 'json', /*  期望服务器返回的数据类型格式 */
                        data:{
                            user_id:userid,
                            msg_id:i.id,
                            flag:1,
                        },
                        success: function(result) { // 请求后台 应答成功返回来的数据
                            // console.log("个人信息");
                            console.log(result);
                            window.open("/event/"+iid);
                        },
                        error: function(xhr, status, error) { // 请求失败运行的函数
                            console.log(error);
                        }})
                }
            }
        })
    }
    // var idlist = $('#cb');
    // console.log(idlist)

    var userid='<%=userid%>';
    var URL="http://47.98.164.4:8080/server/msg/all";
    var url2="http://47.98.164.4:8080/server/msg/unseen"
    $.ajax({
        type: 'post', /*  请求方式  GET  、 POST 、 PUT 等.. */
        url: URL, /*  后台的接口(findApi)  使用相对路径即可 */
        dateType: 'json', /*  期望服务器返回的数据类型格式 */
        data:{
            user_id:userid,
        },
        success: function(result) { // 请求后台 应答成功返回来的数据
            // console.log("个人信息");
            // console.log(result);
            var allmsg=result.data;
            $.ajax({
                type: 'post', /*  请求方式  GET  、 POST 、 PUT 等.. */
                url: url2, /*  后台的接口(findApi)  使用相对路径即可 */
                dateType: 'json', /*  期望服务器返回的数据类型格式 */
                data:{
                    user_id:userid,
                },
                success: function(result) { // 请求后台 应答成功返回来的数据
                    // console.log("个人信息");
                    console.log(result);
                    // allmsg=[];
                    createVue(allmsg,result.data);
                },
                error: function(xhr, status, error) { // 请求失败运行的函数
                    console.log(error);
                }})
        },
        error: function(xhr, status, error) { // 请求失败运行的函数
            console.log(error);
        }})

</script>
